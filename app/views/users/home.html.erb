<% if current_user.user_type_id==1 %>
<p id="notice"><%= notice %></p>


<div class="col-lg-12">
  <h2>Users List</h2>


<table id="table" class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Username</th>
      <th>User type</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.gender %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><% if user.user_type_id == 1 %>  
            <%=  "Admin" %>
        <% end %>
        <% if user.user_type_id == 2 %>  
            <%=  "User" %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
<%end%>