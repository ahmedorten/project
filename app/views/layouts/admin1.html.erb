<% if current_user.user_type_id == 1 %>
<body style="background: white;">
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <%= link_to "Admin Panel", {:action => "home" ,:controller => "users"}  , :class => 'navbar-brand'   %>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">

                <li >
                   <% if notice %>
                   <p class="alert alert-success"><%= notice %></p>
                   <% end %>
                   <% if alert %>
                   <p class="alert alert-danger"><%= alert %></p>
                   <% end %>
                   <p class="navbar-text pull-right">
                    <% if user_signed_in? %>
                    <strong><%= current_user.email %></strong>.

                    <button class="btn btn-primary" >
                        <div style="color:#fff; text-decoration:none; background-color: transparent;">
                          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></div></button>
                          <% else %>
                          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
                          <% end %> 

                      </li>
                  </ul>
                  <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                  <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav" style="min-height:100% !important;">
                        <li>
                            <%= link_to "Account Setting", current_user   %>
                        </li>

                        <li>
                            <%= link_to "Manage Users", {:action => "index" ,:controller => "users"}    %>
                        </li>
                            <li>
                                <%= link_to "Manage Gategory" , {:action => "index" ,:controller => "categories"}   %>
                            </li>

                         <li>
                                <%= link_to "Manage Books" , {:action => "index" ,:controller => "Books"}   %>
                            </li>

                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>

                <div  class="imgback" id="page-wrapper">

                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <div class="row">
                            <div class="col-lg-12">
                            </br></br>
                            <h1 class="page-header">
                            </h1>
                            <ol class="breadcrumb">
                                <li>
                                    <i class="fa fa-dashboard"></i>  <a href="#">Dashboard</a>
                                </li>

                            </ol>
                            <%= yield %>
                        </div>

                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- /#page-wrapper -->

        </div>
        <!-- /#wrapper -->
    </body>
    <% end %>

